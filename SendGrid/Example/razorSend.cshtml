@using SendGrid;
@using System.Net.Mail;

@{
    SendGridSendAsync sendGridSendAsync = new SendGridSendAsync();

    SendGridMessage sendGridMessage = new SendGridMessage();

    sendGridMessage.From = new MailAddress("marcello@example.com", "Marcello Carreira");
    sendGridMessage.AddTo("paulo@example.com");
    sendGridMessage.Subject = "Testando o SendGrid diretamente do Razor";
    sendGridMessage.Text = "Hello World!";
    sendGridMessage.Html = "<p>Ol√° Mundo!<p>";

    string response = sendGridSendAsync.sendMessageAsync(sendGridMessage).Result;
}
<!DOCTYPE HTML>
<html>
<head>
    <title>Testing SendGrid with Razor and getting async 'OK' response or string error</title>
</head>
<body>
    <p>Testing SendGrid with Razor and getting async 'OK' response or string error</p>
    <p>Response: @response</p>
</body>
</html>
